<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <title>Paylist-length-finder</title>
  </head>
  <header>
    <nav class=" p-4 navbar navbar-dark bg-dark ">
        <div class="container-fluid">
          <span class="navbar-brand mb-0 h1">Paylist-length-finder</span>
        </div>
      </nav>
  </header>
  <body class="bg-gradient">
    <form class="p-5" method="post" action="/get-data" >
        <div class="mb-3 ">
          <label for="exampleInputEmail1" class="form-label fs-3" >Playlist URL</label>
          <input type="text" name="playlistURL" class="form-control" required id="exampleInputEmail1" placeholder="url..." aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">Paste the URL of playlist </div>
        </div>
        <button type="submit" class="btn btn-dark">Find length</button>
      </form>

      <%if(locals.result){%>
      <h3 class="p-5"><%=result%> </h3>\
      <% } %>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
